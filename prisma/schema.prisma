generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WorkoutLog {
  id                 String     @id @default(uuid())
  formattedDate      String?
  notes              String?
  tags               String[]   // Storing tags as an array of strings
  movements          Movement[]
}

model Movement {
  id        String     @id @default(uuid())
  name      String
  log       WorkoutLog @relation(fields: [logId], references: [id])
  logId     String
  sets      Set[]
}

model Set {
  id         String    @id @default(uuid())
  movement   Movement @relation(fields: [movementId], references: [id])
  movementId String
  weight     Float
  reps       Int
}

model WorkoutGlobal {
  id          String   @id @default(uuid())
  movement    String   @unique
  bestWeight  Float
  bestReps    Int
  lastUpdated DateTime @updatedAt
}